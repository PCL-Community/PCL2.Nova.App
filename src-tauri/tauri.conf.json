{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Plain Craft Launcher 2 Nova Dev",
    "version": "0.2.2",
    "identifier": "nova.pcl2.app",
    "build": {
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "pnpm build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "PCL2 Nova",
                "width": 1024,
                "minWidth": 1024,
                "height": 614,
                "minHeight": 614,
                "decorations": false,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}